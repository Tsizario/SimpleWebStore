@model CoverType

<form method="post">
    <input asp-for=Id hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Cover type</h2>
            <hr />
        </div>
        <div class="mb-3 form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>        
        <button type="submit" class="btn btn-outline-danger" style="width: 150px;">
            Delete
        </button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-outline-secondary" style="width: 150px;">
            Back to list
        </a>
    </div>
</form>